<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(i){ %>
      <form action="/delete" method="POST">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=i._id%>" onChange="this.form.submit()">
        <p><%= i.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
  <%  }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" value="<%= listTitle %>" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
